{
    "check": {
        "cmd": "cargo check --all-targets --all-features"
    },
    "run basic": {
        "cmd": [
            "cargo",
            "run",
            "--package",
            "violet",
            "--example",
            "basic",
            "--"
        ]
    },
    "debug-basic": {
        "cmd": [
            "cargo",
            "build",
            "--package",
            "violet",
            "--example",
            "basic",
            "--"
        ],
        "components": {
            "dap": {
                "program": "./target/debug/examples/basic",
                "adapter": "rust"
            }
        },
        "env": {
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "violet=debug,wgpu=warn,info"
        }
    },
    "test-miri": {
        "cmd": [
            "cargo",
            "+nightly",
            "miri",
            "test"
        ]
    },
    "test": {
        "cmd": [
            "cargo",
            "nextest",
            "run",
            "--all-features"
        ]
    }
}
